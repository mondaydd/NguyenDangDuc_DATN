@model List<WebBanHangOnline.Models.EF.Order>

@{
    ViewBag.Title = ViewBag.Title ?? "Danh sách hóa đơn";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Ngày tạo</th>
            <th>Tên khách hàng</th>
            <th>Tổng tiền</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Code</td>
                <td>@order.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>@order.CustomerName</td>
                <td>@order.TotalAmount</td>
                <td>
                    <ul>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <li>@detail.Product.Title - Số lượng: @detail.Quantity - Giá: @detail.Price</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
