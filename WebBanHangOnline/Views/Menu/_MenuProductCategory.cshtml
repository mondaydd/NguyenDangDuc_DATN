@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>

<section class="banner bg-light" style="padding: 60px 0;">
    <div class="container">
        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4">
                        <div class="banner_item position-relative rounded overflow-hidden shadow-sm"
                             style="background-image: url('@item.Icon'); background-size: cover; background-position: center; height: 250px; cursor: pointer; transition: transform 0.3s ease, box-shadow 0.3s ease;">
                            <a href="/danh-muc-san-pham/@item.Alias-@item.Id"
                               class="banner_category d-block text-white text-decoration-none position-absolute bottom-0 w-100 py-3 px-4"
                               style="background: rgba(0, 0, 0, 0.5); font-weight: 600; font-size: 1.2rem;">
                                @item.Title
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<style>
    .banner_item:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        z-index: 2;
    }

    /* Nếu muốn khoảng cách thêm giữa các phần tử bên dưới */
    .banner {
        margin-bottom: 40px;
    }
</style>
