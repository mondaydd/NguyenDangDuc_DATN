@model IEnumerable<WebBanHangOnline.Models.EF.Category>

<style>
    .navbar_menu.big-menu {
        font-size: 25px; /* Cỡ chữ lớn hơn */
        font-weight: bold; /* (Tùy chọn) Làm đậm chữ */
    }

        .navbar_menu.big-menu li {
            margin-right: 20px; /* (Tùy chọn) Giãn cách các mục */
        }

            .navbar_menu.big-menu li a {
                text-decoration: none;
                color: #000; /* Màu chữ */
            }

                .navbar_menu.big-menu li a:hover {
                    color: #007bff; /* Màu khi hover */
                }
</style>

@if (Model != null && Model.Any())
{
    <ul class="navbar_menu big-menu">
        @foreach (var item in Model)
        {
            if (item.Alias.Equals("trang-chu"))
            {
                item.Alias = "";
            }
            <li><a href="/@item.Alias">@item.Title</a></li>
        }
    </ul>
}
